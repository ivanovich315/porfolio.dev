---
const { link } = Astro.props;
---

<a
  {...Astro.props}
  href={link}
  class="inline-flex justify-center items-center gap-x-2
         rounded-full
         mt-4 py-1 px-2 md:py-2 md:px-4
         text-xs md:text-base
         transition
         hover:scale-110 hover:bg-white/10"
>
  <slot />
</a>
